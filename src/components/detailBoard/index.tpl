<div class="detail-board cover">
  <div class="container ">
    <div class="left">
      <div class="pic">
        <img src="{{pic}}" alt="{{phoneName}}" class="J_detailPic" />
      </div>
    </div>
    <div class="right">
      <h3 class="name">{{phoneName}}</h3>
      <p class="slogan">{{slogan}}</p>
      <p class="price">￥{{defaultPrice}}元起</p>
      {{title_1}}
      <div class="wrap clearfix J_version">
        {{versions}}
      </div>
      {{title_2}}
      <div class="wrap clearfix J_color">
        {{colors}}
      </div>
      <div class="wrap clearfix J_button">
        {{buttons}}
      </div>

    </div>
  </div>
</div>